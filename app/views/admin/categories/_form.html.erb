<% read_only = local_assigns[:show] ? true : false %>
<%= simple_form_for([:admin, @category]) do |f| %>
  <%= f.input :name, disabled: read_only, autofocus: true %>
  <% if read_only %>
    <%= link_to 'Edit', edit_admin_category_path(@category), class: 'btn btn-primary' %>
  <% else %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
  <%= link_to 'Back', admin_categories_path, class: 'btn btn-default' %>
<% end %>
