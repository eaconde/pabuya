<p id="notice"><%= notice %></p>

<h1>Listing Admin Events</h1>

<table class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date from</th>
      <th>Date to</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.name %></td>
        <td><%= event.description %></td>
        <td><%= event.date_from %></td>
        <td><%= event.date_to %></td>
        <td>
          <%= link_to 'Show', [:admin, event] %>
          <%= link_to 'Edit', edit_admin_event_path(event) %>
          <%= link_to 'Destroy', [:admin, event], method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Event', new_admin_event_path, class: 'btn btn-primary' %>
