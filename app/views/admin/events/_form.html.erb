<% read_only = local_assigns[:show] ? true : false %>
<%= simple_form_for([:admin, @event]) do |f| %>
  <div class="form-inputs">
    <%= f.input :name, disabled: read_only, autofocus: true %>
    <%= f.input :date_from, disabled: read_only %>
    <%= f.input :date_to, disabled: read_only %>

    <%= f.label "Mechanics" %>
    <div class="well">
      <%= f.input :description, type: :text, label: false,
                    :input_html => {rows: 20}, as: :bootsy %>
    </div>
  </div>

  <% if read_only %>
    <%= link_to 'Edit', edit_admin_event_path(@event), class: 'btn btn-primary' %>
  <% else %>
    <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
  <%= link_to 'Back', admin_events_path, class: 'btn btn-default' %>

<% end %>
