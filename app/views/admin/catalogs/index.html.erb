<p id="notice"><%= notice %></p>

<h1>Listing Catalogs</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Points</th>
      <th>catalog type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @catalogs.each do |catalog| %>
      <tr>
        <td><%= catalog.name %></td>
        <td><%= catalog.description %></td>
        <td><%= catalog.points %></td>
        <td><%= catalog.categories_id %></td>
        <td><%= link_to 'Show', [:admin, catalog] %></td>
        <td><%= link_to 'Edit', edit_admin_catalog_path(catalog) %></td>
        <td><%= link_to 'Destroy', [:admin, catalog], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

