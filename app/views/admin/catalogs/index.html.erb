<h1>Listing Catalogs</h1>

<table class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Points</th>
      <th>Category</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @catalogs.each do |catalog| %>
      <tr>
        <td><%= catalog.name %></td>
        <td><%= catalog.description %></td>
        <td><%= catalog.points %></td>
        <td><%= catalog.categories_id %></td>
        <td>
          <%= link_to 'Show', [:admin, catalog] %>
          <%= link_to 'Edit', edit_admin_catalog_path(catalog) %>
          <%= link_to 'Destroy', [:admin, catalog], method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Catalog', new_admin_catalog_path, class: 'btn btn-primary' %>
