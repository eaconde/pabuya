<h1>Listing Catalogs</h1>

<table class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Points</th>
      <th>Category</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @catalogs.each do |catalog| %>
      <tr>
        <td><%= catalog.name %></td>
        <td><%= catalog.description %></td>
        <td><%= catalog.points %></td>
        <td><%= catalog.categories_id %></td>
        <td class="action_section">
          <%= link_to_show [:admin, catalog] %>
          <%= link_to_edit edit_admin_catalog_path(catalog) %>
          <%= link_to_destroy [:admin, catalog] %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Catalog', new_admin_catalog_path, class: 'btn btn-primary' %>
