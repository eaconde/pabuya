<% read_only = local_assigns[:show] ? true : false %>
<%= simple_form_for([:admin, @catalog]) do |f| %>
  <%= f.input :name, disabled: read_only, autofocus: true %>
  <%= f.input :description, disabled: read_only %>
  <%= f.input :points, disabled: read_only %>
  <%= f.input :categories_id, collection: Category.all,
                label_method: :name, value_method: :id,
                prompt: "Select Category", disabled: read_only %>
  <% if read_only %>
  <%= link_to 'Edit', edit_admin_catalog_path(@catalog), class: 'btn btn-primary' %>
  <% else  %>
  <%= f.button :submit, class: 'btn btn-primary' %>
  <% end %>
  <%= link_to 'Back', admin_catalogs_path, class: 'btn btn-default' %>
<% end %>
